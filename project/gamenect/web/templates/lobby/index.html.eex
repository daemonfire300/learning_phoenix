<h2>Listing lobbies</h2>

<table class="table">
  <thead>
    <tr>
      <th>Game</th>
      <th>Title</th>
      <th>Status</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for lobby <- @lobbies do %>
    <tr>
      <td>_</td>
      <td><%= lobby.title %></td>
      <td><%= status_to_text lobby.status %></td>

      <td class="text-right">
        <%= link "View", to: lobby_path(@conn, :show, lobby), class: "btn btn-default btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New lobby", to: lobby_path(@conn, :new) %>
